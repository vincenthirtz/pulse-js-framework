@component {{NAME}}Modal

import { trapFocus, announce } from 'pulse-js-framework/runtime/a11y'

props {
  isOpen: boolean = false
  title: string
  onClose: function
  closeOnBackdrop: boolean = true
  closeOnEscape: boolean = true
}

state {
  focusTrapCleanup: null
}

watch {
  // Setup/cleanup focus trap when modal opens/closes
  isOpen: (open) => {
    if (open) {
      // Announce to screen readers
      announce(`${title} dialog opened`)

      // Trap focus inside modal
      const dialog = document.querySelector('.{{name}}-modal-dialog')
      if (dialog) {
        focusTrapCleanup = trapFocus(dialog, {
          autoFocus: true,
          returnFocus: true
        })
      }
    } else if (focusTrapCleanup) {
      focusTrapCleanup()
      focusTrapCleanup = null
    }
  }
}

actions {
  handleBackdropClick(event) {
    if (closeOnBackdrop && event.target === event.currentTarget) {
      onClose()
    }
  }

  handleKeyDown(event) {
    if (closeOnEscape && event.key === 'Escape') {
      onClose()
    }
  }
}

unmounted {
  if (focusTrapCleanup) {
    focusTrapCleanup()
  }
}

view {
  @if(isOpen) {
    .{{name}}-modal-backdrop
      @click(handleBackdropClick)
      @keydown(handleKeyDown)
    {
      .{{name}}-modal-dialog
        [role=dialog]
        [aria-modal=true]
        [aria-labelledby={{name}}-modal-title]
      {
        .modal-header {
          h2#{{name}}-modal-title { "{title}" }
          button.modal-close
            [type=button]
            [aria-label="Close dialog"]
            @click(onClose)
          {
            "Ã—"
          }
        }

        .modal-body {
          slot
        }

        .modal-footer {
          slot "footer" {
            // Default footer content
            button[type=button] @click(onClose) { "Close" }
          }
        }
      }
    }
  }
}

style {
  .{{name}}-modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.2s ease-out;
  }

  .{{name}}-modal-dialog {
    background: var(--color-surface, white);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    max-width: 90vw;
    max-height: 90vh;
    overflow: auto;
    animation: slideUp 0.2s ease-out;
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-border, #eee);
  }

  .modal-header h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    color: var(--color-text-muted, #666);
  }

  .modal-close:hover {
    color: var(--color-text, #333);
  }

  .modal-body {
    padding: 1.5rem;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-border, #eee);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .{{name}}-modal-backdrop,
    .{{name}}-modal-dialog {
      animation: none;
    }
  }
}
