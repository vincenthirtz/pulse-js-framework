@component {{NAME}}List

import { useAsync } from 'pulse-js-framework/runtime/async'

props {
  items: array = []
  loading: boolean = false
  emptyMessage: string = 'No items found'
  onItemClick: function
  onItemDelete: function
}

state {
  selectedId: null
  searchQuery: ''
}

computed {
  filteredItems: items.filter(item =>
    item.name?.toLowerCase().includes(searchQuery.toLowerCase()) ||
    item.title?.toLowerCase().includes(searchQuery.toLowerCase())
  )

  hasItems: filteredItems.length > 0
}

actions {
  selectItem(id) {
    selectedId = selectedId === id ? null : id
  }

  handleDelete(event, item) {
    event.stopPropagation()
    if (confirm(`Delete "${item.name || item.title}"?`)) {
      onItemDelete?.(item)
    }
  }
}

view {
  .{{name}}-list {
    .list-header {
      .search-box {
        input[type=search]
          [placeholder="Search..."]
          [value={searchQuery}]
          [aria-label="Search items"]
          @input(e => searchQuery = e.target.value)
      }

      .list-count[aria-live=polite] {
        "{filteredItems.length} item{filteredItems.length !== 1 ? 's' : ''}"
      }
    }

    @if(loading) {
      .list-loading[aria-busy=true] {
        .spinner { }
        span { "Loading..." }
      }
    }

    @if(!loading && !hasItems) {
      .list-empty {
        p { "{emptyMessage}" }
      }
    }

    @if(!loading && hasItems) {
      ul.list-items[role=listbox][aria-label="{{NAME}} list"] {
        @for(item of filteredItems) {
          li.list-item
            [key={item.id}]
            [role=option]
            [aria-selected={selectedId === item.id}]
            [tabindex=0]
            @click(() => selectItem(item.id))
            @keydown(e => e.key === 'Enter' && selectItem(item.id))
          {
            .item-content {
              .item-name { "{item.name || item.title}" }
              @if(item.description) {
                .item-description { "{item.description}" }
              }
            }

            .item-actions {
              @if(onItemClick) {
                button[type=button][aria-label="View {item.name || item.title}"]
                  @click(e => { e.stopPropagation(); onItemClick(item) })
                { "View" }
              }

              @if(onItemDelete) {
                button.delete-btn
                  [type=button]
                  [aria-label="Delete {item.name || item.title}"]
                  @click(e => handleDelete(e, item))
                { "Delete" }
              }
            }
          }
        }
      }
    }
  }
}

style {
  .{{name}}-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .search-box input {
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border, #ccc);
    border-radius: 4px;
    min-width: 200px;
  }

  .list-count {
    color: var(--color-text-muted, #666);
    font-size: 0.875rem;
  }

  .list-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 2rem;
    color: var(--color-text-muted, #666);
  }

  .spinner {
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-border, #ccc);
    border-top-color: var(--color-primary, #007bff);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .list-empty {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-muted, #666);
  }

  .list-items {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .list-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--color-surface, white);
    border: 1px solid var(--color-border, #eee);
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.15s, border-color 0.15s;
  }

  .list-item:hover {
    background: var(--color-surface-hover, #f8f9fa);
  }

  .list-item:focus {
    outline: 2px solid var(--color-primary, #007bff);
    outline-offset: 2px;
  }

  .list-item[aria-selected=true] {
    border-color: var(--color-primary, #007bff);
    background: var(--color-primary-light, #e7f1ff);
  }

  .item-content {
    flex: 1;
  }

  .item-name {
    font-weight: 500;
  }

  .item-description {
    font-size: 0.875rem;
    color: var(--color-text-muted, #666);
    margin-top: 0.25rem;
  }

  .item-actions {
    display: flex;
    gap: 0.5rem;
  }

  .item-actions button {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border, #ccc);
    border-radius: 4px;
    background: white;
    cursor: pointer;
    font-size: 0.875rem;
  }

  .delete-btn {
    color: var(--color-error, #dc3545);
    border-color: var(--color-error, #dc3545);
  }

  .delete-btn:hover {
    background: var(--color-error, #dc3545);
    color: white;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
}
