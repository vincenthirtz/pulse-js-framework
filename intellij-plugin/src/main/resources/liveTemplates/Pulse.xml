<templateSet group="Pulse">
    <!-- Page Component -->
    <template name="page" value="@page $NAME$&#10;&#10;state {&#10;  $PROPERTY$: $VALUE$&#10;}&#10;&#10;view {&#10;  .$CONTAINER$ {&#10;    $END$&#10;  }&#10;}&#10;" description="Create a new Pulse page component" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="&quot;ComponentName&quot;" alwaysStopAt="true"/>
        <variable name="PROPERTY" expression="" defaultValue="&quot;property&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <variable name="CONTAINER" expression="" defaultValue="&quot;container&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Component with Props -->
    <template name="component" value="@page $NAME$&#10;&#10;props {&#10;  $PROP$: $DEFAULT$&#10;}&#10;&#10;view {&#10;  .$CONTAINER$ {&#10;    $END$&#10;  }&#10;}&#10;" description="Create a new Pulse component with props" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="&quot;ComponentName&quot;" alwaysStopAt="true"/>
        <variable name="PROP" expression="" defaultValue="&quot;propName&quot;" alwaysStopAt="true"/>
        <variable name="DEFAULT" expression="" defaultValue="&quot;defaultValue&quot;" alwaysStopAt="true"/>
        <variable name="CONTAINER" expression="" defaultValue="&quot;container&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- State Block -->
    <template name="state" value="state {&#10;  $PROPERTY$: $VALUE$&#10;}" description="Add a state block" toReformat="true" toShortenFQNames="true">
        <variable name="PROPERTY" expression="" defaultValue="&quot;property&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- View Block -->
    <template name="view" value="view {&#10;  .$CONTAINER$ {&#10;    $END$&#10;  }&#10;}" description="Add a view block" toReformat="true" toShortenFQNames="true">
        <variable name="CONTAINER" expression="" defaultValue="&quot;container&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Style Block -->
    <template name="style" value="style {&#10;  .$SELECTOR$ {&#10;    $PROPERTY$: $VALUE$;&#10;  }&#10;}" description="Add a style block" toReformat="true" toShortenFQNames="true">
        <variable name="SELECTOR" expression="" defaultValue="&quot;selector&quot;" alwaysStopAt="true"/>
        <variable name="PROPERTY" expression="" defaultValue="&quot;property&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Actions Block -->
    <template name="actions" value="actions {&#10;  $NAME$() {&#10;    $END$&#10;  }&#10;}" description="Add an actions block" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="&quot;actionName&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Router Block -->
    <template name="router" value="router {&#10;  mode: &quot;$MODE$&quot;&#10;  routes {&#10;    &quot;/&quot;: $HOME$&#10;    $END$&#10;  }&#10;}" description="Add a router configuration" toReformat="true" toShortenFQNames="true">
        <variable name="MODE" expression="" defaultValue="&quot;history&quot;" alwaysStopAt="true"/>
        <variable name="HOME" expression="" defaultValue="&quot;HomePage&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Store Block -->
    <template name="store" value="store {&#10;  state {&#10;    $PROPERTY$: $VALUE$&#10;  }&#10;  actions {&#10;    $ACTION$() {&#10;      $END$&#10;    }&#10;  }&#10;}" description="Add a store configuration" toReformat="true" toShortenFQNames="true">
        <variable name="PROPERTY" expression="" defaultValue="&quot;property&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <variable name="ACTION" expression="" defaultValue="&quot;actionName&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Import -->
    <template name="import" value="import $COMPONENT$ from '$PATH$'" description="Import a component" toReformat="true" toShortenFQNames="true">
        <variable name="COMPONENT" expression="" defaultValue="&quot;Component&quot;" alwaysStopAt="true"/>
        <variable name="PATH" expression="" defaultValue="&quot;./Component.pulse&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Named Import -->
    <template name="importn" value="import { $COMPONENT$ } from '$PATH$'" description="Import named exports" toReformat="true" toShortenFQNames="true">
        <variable name="COMPONENT" expression="" defaultValue="&quot;Component&quot;" alwaysStopAt="true"/>
        <variable name="PATH" expression="" defaultValue="&quot;./components.pulse&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Click Handler -->
    <template name="@click" value="@click($HANDLER$)" description="Add click event handler" toReformat="true" toShortenFQNames="true">
        <variable name="HANDLER" expression="" defaultValue="&quot;handler&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Conditional -->
    <template name="@if" value="@if($CONDITION$) {&#10;  $END$&#10;}" description="Add conditional rendering" toReformat="true" toShortenFQNames="true">
        <variable name="CONDITION" expression="" defaultValue="&quot;condition&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Loop -->
    <template name="@for" value="@for($ITEM$ in $ITEMS$) {&#10;  $END$&#10;}" description="Add loop rendering" toReformat="true" toShortenFQNames="true">
        <variable name="ITEM" expression="" defaultValue="&quot;item&quot;" alwaysStopAt="true"/>
        <variable name="ITEMS" expression="" defaultValue="&quot;items&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Slot -->
    <template name="slot" value="slot &quot;$NAME$&quot;" description="Add a slot for content projection" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="&quot;default&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Link Directive -->
    <template name="@link" value="@link(&quot;$PATH$&quot;) &quot;$TEXT$&quot;" description="Add a router link" toReformat="true" toShortenFQNames="true">
        <variable name="PATH" expression="" defaultValue="&quot;/path&quot;" alwaysStopAt="true"/>
        <variable name="TEXT" expression="" defaultValue="&quot;Link Text&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Outlet Directive -->
    <template name="@outlet" value="@outlet" description="Add router outlet" toReformat="true" toShortenFQNames="true">
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Button Element -->
    <template name="button" value="button$CLASS$ @click($HANDLER$) &quot;$TEXT$&quot;" description="Create a button with click handler" toReformat="true" toShortenFQNames="true">
        <variable name="CLASS" expression="" defaultValue="&quot;.btn&quot;" alwaysStopAt="true"/>
        <variable name="HANDLER" expression="" defaultValue="&quot;handler&quot;" alwaysStopAt="true"/>
        <variable name="TEXT" expression="" defaultValue="&quot;Click me&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Input Element -->
    <template name="input" value="input[type=$TYPE$] @model($VALUE$)" description="Create an input with two-way binding" toReformat="true" toShortenFQNames="true">
        <variable name="TYPE" expression="" defaultValue="&quot;text&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>

    <!-- Form Element -->
    <template name="form" value="form @submit($HANDLER$) {&#10;  $END$&#10;  button[type=submit] &quot;Submit&quot;&#10;}" description="Create a form with submit handler" toReformat="true" toShortenFQNames="true">
        <variable name="HANDLER" expression="" defaultValue="&quot;handleSubmit&quot;" alwaysStopAt="true"/>
        <context>
            <option name="PULSE" value="true"/>
        </context>
    </template>
</templateSet>
